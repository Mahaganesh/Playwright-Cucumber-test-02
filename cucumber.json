{
    "default": {
        "formatOptions": {
            "snippetInterface": "async-await"
        },
        "paths": [
            "test/*.feature"
        ],
        "dryRun": false,
        "require": [
            "support/*.ts",
            "steps/*.ts"
        ],
        "requireModule": [
            "ts-node/register"
        ],
        "format": [
            "progress-bar"
        ],
        "parallel": 2
    },
    "scripts": {
        "run:test1": "npx cucumber-js --tags '@test1'",
        "run:test2": "npx cucumber-js --tags '@test2'"
    }
}
